page {
    background: #f5f5f5;
}

.rule-item {
    margin:30rpx;
    padding:30rpx 20rpx;
    background: #fff;
    border-radius: 5px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    font-size: 28rpx;
}

.rule-top text {
    display: block;
    line-height: 1.6;
    margin: 10rpx 0;
    color: #646464;
    padding-left:30rpx;
    position: relative;
}

.rule-top text::before {
    content: "";
    display: inline-block;
    padding: 10rpx;
    border-radius: 50%;
    background: #e6ae54;
    position: absolute;
    top:14rpx;
    left:0;
}
.rule-title{
    text-align: center;
    font-size:50rpx;
    line-height:2;
    color:#ce3847;
    font-weight:bold;
}
.rule-title image{
    width:40rpx;
    height:40rpx;
    vertical-align: -2rpx;
}
.in-one{
    border-bottom:1px solid #ccc;
    font-size: 30rpx;
    padding:15rpx 0;
    line-height: 1.8;
}
.in-one view:first-child{
    float: left;
}
.in-one view:last-child{
    float: right;
    text-align: right;
}
.in-one view text{
    display: block;
}
.in-one view text:last-child{color:#999;font-size:28rpx;}
.in-one .coin-num{color:#fbd824;}
.income{padding-top: 20rpx;}
.income .in-one:last-child{border:0;}