/* pages/news/news.wxss */
@import '../css/newsItem.wxss';

.wxParse-div {
  margin:0;
  padding:0 10px;
}
.wxParse-h1{
    font-size:48rpx;
    font-weight: bold;
    margin:20px 0;
}

.wxParse-p{
    font-size:40rpx;
    line-height: 2;
    color:#222;
    margin:5px 0;
    padding:15px 10px;
    background: #f5f5f5;
    border-radius:3px;
}
.p_time{
    font-size:28rpx;
    color:#999;
    padding:5px;
    line-height: 1;
    display: none;
}
.wxParse-img{
    width:100%!important;
}
.user-img{
    text-align: center;
    padding:50rpx 100rpx 0 100rpx;
}
.user-img .wxParse-p{padding:20rpx 0 0 0;margin:0;}
.user-img .wxParse-p image{
    width: 60rpx!important;
    height:60rpx!important;
    margin:0 2rpx;
}
.user-title.wxParse-p{
    margin-bottom:20rpx;
    font-size:36rpx;
    padding:0;
    margin: 0;
    border-radius:0;
    background:none;
}
.user-title view,.about-tip view{display: inline;}
.about{
    display:block;
    text-align: justify;
    letter-spacing: 1.5px;
    line-height: 1.75;
    background-color: rgb(250, 250, 250);
    color: rgb(63, 62, 63);
    padding:20rpx 30rpx 30rpx 30rpx;
    margin:30rpx 50rpx 10rpx 50rpx;
    border-radius:3px;
    border: 1px solid rgb(170, 166, 149);
    word-break: break-all;
    word-wrap: break-word;
    background:#f5f5f5;
}
.about .wxParse-p{font-size:28rpx!important;margin:0;}
.about .a-title + .wxParse-p{padding:0;}
.about .a-title{
    display:block;
    width: 200rpx;
    background-color: rgb(220, 194, 131);
    border-radius:20px;
    line-height: 60rpx;
    border: 1px solid rgb(170, 166, 149);
    padding:0 30rpx;
    color:#fff;
    text-align: center;
    margin:-54rpx auto 20rpx auto;
}
.about-tip{
    display:block;
    margin:30rpx 50rpx 10rpx 50rpx;
    background: rgb(244, 156, 44);
    color:#fff;
    border-radius:20px;
    line-height:60rpx;
    font-size:26rpx;
}
.about-tip image{
    width:50rpx!important;
    height:50rpx!important;
    border-radius:50%;
    vertical-align:-15rpx;
}
.about-tip .wxParse-p{background: none;font-size:26rpx;color:#fff}
.num{
    display: inline;
}