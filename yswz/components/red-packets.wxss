/* components/red-packets.wxss */

.circleBar {
    overflow: hidden;
    position: fixed;
    z-index: 999;
    bottom: 200rpx;
    right: 10rpx;
    background: none;
    padding: 0;
    width: 86px;
    height: 86px;
}

.circleBar .wrap {
    width: 86px;
    height: 86px;
    border-radius: 50%;
    background: none;
    padding:0;
}

.cir {
    display: inline-block;
    background-color: #fff;
    border-radius: 100%;
    width: 86px;
    height: 86px;
    position: fixed;
    bottom: 200rpx;
    right: 10rpx;
    z-index: 999;
}

.top {
    text-align: center;
}

.centerWord {
    width: 100%;
    position: absolute;
    top: 20px;
    left: 0;
    text-align: center;
    color: #fc9b10;
}

.centerWord image {
    width: 40px;
    height:48px;
    vertical-align: middle;
}

button::after {
    border: none;
}
.gift{
    font-size:30rpx;
    width:151rpx;
    height:180rpx;
    position: fixed;
    right:5rpx;
    bottom:200rpx;
    z-index: 999;
    animation: rotate 1s linear infinite;
    background: none;
    padding:0;
    line-height:normal;
}
.gift text{
    color:#f15859;
    display: block;
    position: absolute;
    width:100%;
    text-align: center;
    top:47rpx;
    font-weight: bold;
    text-shadow: 0 1px #fed140, 1px 0 #fed140, -1px 0 #fed140, 0 -1px #fed140;
}
.gift image{
    width:151rpx;
    height:180rpx;
}
.gift-pop{
    position: fixed;
    width:604rpx;
    height:722rpx;
    z-index: 999;
    left:50%;
    margin-left:-302rpx;
    top:150rpx;
    color:#fff;
}
.gift-pop image{
    width:604rpx;
    height:722rpx;
    position: absolute;
    top:0;
    left:0;
}
.gift-pop view{
    font-size:30rpx;
    position: relative;
    z-index: 2;
    text-align: center;
    color:#fff;
    padding:10rpx 0;
}

.coin-tip {
    width: 100%;
    position: fixed;
    height: 80rpx;
    top: 0;
    left: 0;
    padding: 10rpx 0rpx;
    background: #eb6748;
    z-index: 999;
    color: #fff;
    font-size: 26rpx;
    box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.9);
}

.coin-tip .txt {
    padding-top: 15rpx;
    display: block;
    position: absolute;
    left: 80rpx;
    right: 50rpx;
    top: 0;
    line-height: 1.4;
}

.coin-tip .txt text {
    color: #ebe785;
}

.coin, .off {
    width: 50rpx;
    height: 50rpx;
    vertical-align: -38rpx;
    margin-left: 15rpx;
}

.off {
    float: right;
    margin: 15rpx 15rpx 0 0;
}
.coin-pop {
    width: 196rpx;
    height: 218rpx;
    background: rgba(0, 0, 0, 0.6);
    border-radius: 5px;
    position: fixed;
    z-index: 999;
    top: 50%;
    left: 50%;
    margin: -109rpx 0 0 -98rpx;
    text-align: center;
}

.coin-pop image {
    display: block;
    margin: 0 auto;
    width: 60%;
}

.coin-pop text {
    color: #fbd824;
    font-size: 36rpx;
}

.coin-pop text:first-child {
    font-size: 30rpx;
    color: #f5f5f5;
}