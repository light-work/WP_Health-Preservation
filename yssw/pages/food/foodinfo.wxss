@import '../css/newsItem.wxss';
.dp_box{padding:10rpx 20rpx;}
.wxParse-h3 .wxParse-inline{
    font-size:34rpx;
    padding:20rpx 0 10rpx 0;
    font-weight: bold;
    color:#444;
    border-bottom: 1px dashed #aaa;
}
.pbm.wxParse-h3{
    margin:20rpx 0;
}

.wxParse-inline{
    font-size:36rpx;
    color:#333;
    line-height:2;
}
.wxParse-inline{
    padding:20rpx;
    background: #f5f5f5;
    margin-top: 10rpx;
    line-height:1.6;
}
.pbm.wxParse-h3 .wxParse-inline{
    line-height:normal;
    background:none;
}
.wxParse-table{
    width: 100%;
    overflow:hidden;
}
.wxParse-tbody .WxEmojiView.wxParse-inline{
    /* display: none; */
}
.wxParse-tbody .wxParse-td .WxEmojiView.wxParse-inline{
    display: inline-block;
    background: none;
    padding:0;
}
.wxParse-tr{
    width:750rpx;
}
.wxParse-td{
    width:375rpx;
    display: inline-block;
    padding:5rpx 0;
    background: #ddd;
    text-indent: 20rpx;
    border-bottom:1px solid #ccc;
}
.wxParse-tbody .wxParse-tr .wxParse-td:nth-child(2n+1){
    background: #bbb;
}
.wxParse-span.wxParse-inline .wxParse-inline{
    margin-top:0;
    padding:0;
}
.food-content{
    padding:20rpx;
}
.info-img{
    width:230rpx;
    height:153rpx;
    float: left;
}
.food-title{
    color:#ccc;
    font-size:30rpx;
    padding-bottom:20rpx;
    border-bottom:1px dashed #ccc;
    margin-bottom:20rpx;
}
.food-name{
    color:#f29001;
    font-size:34rpx;
    font-weight: bold;
    padding-right:20rpx;
}
.food-info{
    font-size:34rpx;
    color:#444;
}
.food-info view view:first-child{
    font-weight: bold;
    color:#444;
}
.food-txt{
    color:#999;
    padding:5rpx;
}
.txt-gx{color:#07793E;}

